{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "fastify",
        ],
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}